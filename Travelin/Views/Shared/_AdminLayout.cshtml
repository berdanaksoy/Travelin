
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — Tur Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;600;700;800&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        :root {
            --sidebar-w: 260px;
            --sidebar-bg: #0d1117;
            --sidebar-border: #1e2736;
            --sidebar-accent: #2563eb;
            --sidebar-text: #8b9ab0;
            --sidebar-text-active: #ffffff;
            --topbar-h: 64px;
            --body-bg: #f0f4f8;
            --card-bg: #ffffff;
            --font-display: 'Syne', sans-serif;
            --font-body: 'DM Sans', sans-serif;
        }

        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            font-family: var(--font-body);
            background: var(--body-bg);
            color: #1a202c;
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* ── SIDEBAR ─────────────────────────────── */
        .sidebar {
            width: var(--sidebar-w);
            background: var(--sidebar-bg);
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0; left: 0; bottom: 0;
            z-index: 1000;
            transition: transform .3s cubic-bezier(.4,0,.2,1);
            overflow-y: auto;
            border-right: 1px solid var(--sidebar-border);
        }

        .sidebar-brand {
            padding: 1.5rem 1.5rem 1rem;
            display: flex;
            align-items: center;
            gap: .75rem;
            border-bottom: 1px solid var(--sidebar-border);
            text-decoration: none;
        }

        .sidebar-brand .brand-icon {
            width: 38px; height: 38px;
            background: var(--sidebar-accent);
            border-radius: 10px;
            display: grid; place-items: center;
            font-size: 1.1rem; color: #fff;
            flex-shrink: 0;
        }

        .sidebar-brand .brand-name {
            font-family: var(--font-display);
            font-weight: 800;
            font-size: 1.15rem;
            color: #fff;
            letter-spacing: -.02em;
        }

        .sidebar-brand .brand-sub {
            font-size: .68rem;
            color: var(--sidebar-text);
            font-weight: 400;
            display: block;
            margin-top: 1px;
        }

        .sidebar-section {
            padding: 1.25rem 1rem .5rem;
        }

        .sidebar-section-label {
            font-size: .65rem;
            font-weight: 600;
            letter-spacing: .1em;
            text-transform: uppercase;
            color: #4a5568;
            padding: 0 .5rem;
            margin-bottom: .5rem;
        }

        .nav-item-link {
            display: flex;
            align-items: center;
            gap: .75rem;
            padding: .6rem .75rem;
            border-radius: 8px;
            text-decoration: none;
            color: var(--sidebar-text);
            font-size: .875rem;
            font-weight: 400;
            transition: all .15s;
            margin-bottom: 2px;
        }

        .nav-item-link i { font-size: 1rem; flex-shrink: 0; }

        .nav-item-link:hover {
            background: #1a2332;
            color: #cbd5e0;
        }

        .nav-item-link.active {
            background: rgba(37,99,235,.15);
            color: #60a5fa;
            font-weight: 500;
        }

        .nav-item-link .badge-dot {
            width: 6px; height: 6px;
            border-radius: 50%;
            background: var(--sidebar-accent);
            margin-left: auto;
        }

        .sidebar-footer {
            margin-top: auto;
            padding: 1rem;
            border-top: 1px solid var(--sidebar-border);
        }

        .sidebar-footer .nav-item-link {
            color: #e53e3e;
        }

        .sidebar-footer .nav-item-link:hover {
            background: rgba(229,62,62,.1);
            color: #fc8181;
        }

        /* ── TOPBAR ──────────────────────────────── */
        .topbar {
            position: fixed;
            top: 0;
            left: var(--sidebar-w);
            right: 0;
            height: var(--topbar-h);
            background: #fff;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
            gap: 1rem;
            z-index: 900;
            transition: left .3s cubic-bezier(.4,0,.2,1);
        }

        .topbar .hamburger {
            display: none;
            background: none;
            border: none;
            font-size: 1.3rem;
            color: #4a5568;
            cursor: pointer;
            padding: .25rem;
        }

        .topbar-title {
            font-family: var(--font-display);
            font-weight: 700;
            font-size: 1rem;
            color: #1a202c;
        }

        .topbar-spacer { flex: 1; }

        .topbar-actions { display: flex; align-items: center; gap: .75rem; }

        .topbar-icon-btn {
            width: 36px; height: 36px;
            border-radius: 8px;
            background: none;
            border: 1px solid #e2e8f0;
            display: grid; place-items: center;
            color: #4a5568;
            cursor: pointer;
            font-size: .95rem;
            transition: all .15s;
            position: relative;
        }

        .topbar-icon-btn:hover { background: #f7fafc; border-color: #cbd5e0; }

        .notif-dot {
            position: absolute;
            top: 5px; right: 5px;
            width: 7px; height: 7px;
            background: #e53e3e;
            border-radius: 50%;
            border: 1.5px solid #fff;
        }

        .admin-profile {
            display: flex;
            align-items: center;
            gap: .6rem;
            cursor: pointer;
            padding: .35rem .6rem .35rem .35rem;
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            transition: all .15s;
        }

        .admin-profile:hover { background: #f7fafc; }

        .admin-avatar {
            width: 32px; height: 32px;
            border-radius: 8px;
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            display: grid; place-items: center;
            color: #fff;
            font-weight: 700;
            font-size: .8rem;
            flex-shrink: 0;
        }

        .admin-name {
            font-size: .82rem;
            font-weight: 500;
            color: #2d3748;
            white-space: nowrap;
        }

        .admin-role {
            font-size: .7rem;
            color: #718096;
            display: block;
        }

        /* ── MAIN CONTENT ────────────────────────── */
        .main-wrapper {
            margin-left: var(--sidebar-w);
            margin-top: var(--topbar-h);
            padding: 2rem 1.75rem;
            flex: 1;
            min-width: 0;
            transition: margin-left .3s cubic-bezier(.4,0,.2,1);
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,.5);
            z-index: 999;
        }

        /* ── RESPONSIVE ──────────────────────────── */
        @@media (max-width: 991px) {
            .sidebar { transform: translateX(-100%); }
            .sidebar.open { transform: translateX(0); }
            .topbar { left: 0; }
            .topbar .hamburger { display: grid; place-items: center; }
            .main-wrapper { margin-left: 0; }
            .sidebar-overlay.show { display: block; }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar">
        <a href="#" class="sidebar-brand">
            <div class="brand-icon"><i class="bi bi-compass"></i></div>
            <div>
                <div class="brand-name">TourAdmin</div>
                <span class="brand-sub">Yönetim Paneli</span>
            </div>
        </a>

        <div class="sidebar-section">
            <div class="sidebar-section-label">Genel</div>
            <a href="#" class="nav-item-link">
                <i class="bi bi-grid-1x2"></i> Dashboard
            </a>
            <a href="#" class="nav-item-link active">
                <i class="bi bi-map"></i> Turlar
                <span class="badge-dot"></span>
            </a>
            <a href="#" class="nav-item-link">
                <i class="bi bi-plus-circle"></i> Yeni Tur Ekle
            </a>
        </div>

        <div class="sidebar-section">
            <div class="sidebar-section-label">İşlemler</div>
            <a href="#" class="nav-item-link">
                <i class="bi bi-calendar2-check"></i> Rezervasyonlar
            </a>
            <a href="#" class="nav-item-link">
                <i class="bi bi-people"></i> Müşteriler
            </a>
            <a href="#" class="nav-item-link">
                <i class="bi bi-bar-chart-line"></i> Raporlar
            </a>
            <a href="#" class="nav-item-link">
                <i class="bi bi-star"></i> Yorumlar
            </a>
        </div>

        <div class="sidebar-section">
            <div class="sidebar-section-label">Sistem</div>
            <a href="#" class="nav-item-link">
                <i class="bi bi-gear"></i> Ayarlar
            </a>
        </div>

        <div class="sidebar-footer">
            <a href="#" class="nav-item-link">
                <i class="bi bi-box-arrow-left"></i> Çıkış Yap
            </a>
        </div>
    </aside>

    <!-- TOPBAR -->
    <header class="topbar">
        <button class="hamburger" onclick="toggleSidebar()" aria-label="Menüyü aç/kapat">
            <i class="bi bi-list"></i>
        </button>
        <span class="topbar-title">@ViewData["Title"]</span>
        <div class="topbar-spacer"></div>
        <div class="topbar-actions">
            <button class="topbar-icon-btn" aria-label="Bildirimler">
                <i class="bi bi-bell"></i>
                <span class="notif-dot"></span>
            </button>
            <button class="topbar-icon-btn" aria-label="Mesajlar">
                <i class="bi bi-chat-dots"></i>
            </button>
            <div class="dropdown">
                <div class="admin-profile" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="admin-avatar">A</div>
                    <div>
                        <div class="admin-name">Admin Kullanıcı</div>
                        <span class="admin-role">Süper Admin</span>
                    </div>
                    <i class="bi bi-chevron-down ms-1" style="font-size:.7rem;color:#718096"></i>
                </div>
                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-1">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profilim</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Ayarlar</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-box-arrow-left me-2"></i>Çıkış Yap</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- MAIN -->
    <main class="main-wrapper">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('open');
            document.getElementById('sidebarOverlay').classList.toggle('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>